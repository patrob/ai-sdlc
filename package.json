{
  "name": "ai-sdlc",
  "version": "0.3.1-alpha.2",
  "description": "Agent-first SDLC workflow manager using Claude Agent SDK",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ai-sdlc": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run lint && npm run build && npm test"
  },
  "keywords": [
    "sdlc",
    "agent",
    "workflow",
    "claude",
    "ai"
  ],
  "author": "Patrick Robinson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patrob/ai-sdlc.git"
  },
  "bugs": {
    "url": "https://github.com/patrob/ai-sdlc/issues"
  },
  "homepage": "https://github.com/patrob/ai-sdlc#readme",
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.12",
    "chalk": "^5.3.0",
    "chokidar": "^4.0.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.0.0",
    "glob": "^11.0.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.1",
    "ora": "^8.0.0",
    "proper-lockfile": "^4.1.2",
    "string-width": "^8.1.0",
    "write-file-atomic": "^5.0.1"
  },
  "devDependencies": {
    "@types/chokidar": "^2.1.7",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@types/proper-lockfile": "^4.1.4",
    "@types/write-file-atomic": "^4.0.3",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
